<div id="<%= dom_id booking %>">
  <h1>
    Booking: <%= booking.flight.departure_airport.name %> â†’ <%= booking.flight.arrival_airport.name %> 
  </h1>

  <p>
    <strong>Departure time:</strong>
    <%= booking.flight.departure_time.strftime("%Y-%m-%d %a %H:%M") %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= booking.flight.duration %>
  </p>

  <h2>Passengers</h2>

  <ul>
  <% booking.passengers.each do |passenger| %>
    <li><%= passenger.name %></li>
  <% end %>
  </ul>
</div>
